<Window x:Class="WpfApp5.TRAMITE"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Trámites"
        Height="550" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.Background>
            <ImageBrush ImageSource="/imagenes/fondoAzul.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <TextBlock Grid.Row="0" Text="REGISTRO DE TRÁMITES"
                   FontSize="30" FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20" />

        <!-- FORMULARIO -->
        <Grid Grid.Row="1" Margin="0,0,0,15" HorizontalAlignment="Left" Width="500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Descripción:" Foreground="White" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtDescripcion" Width="300" Height="30" ToolTip="Ingrese la descripción del trámite"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Fecha:" Foreground="White" VerticalAlignment="Center" Margin="0,10,0,0"/>
            <DatePicker Grid.Row="1" Grid.Column="1" x:Name="dpFecha" Margin="0,10,0,0"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Responsable:" Foreground="White" VerticalAlignment="Center" Margin="0,10,0,0"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtResponsable" Width="200" Height="30" Margin="0,10,0,0" ToolTip="Ingrese el responsable del trámite"/>
        </Grid>

        <!-- BOTONES -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,15">
            <Button x:Name="btnAgregarTramite" Content="Agregar" Width="120" Height="40" Margin="0,0,10,0" FontWeight="Bold" Background="Green" Foreground="White" Click="btnAgregarTramite_Click_1"/>
            <Button x:Name="btnEditarTramite" Content="Modificar" Width="120" Height="40" Margin="0,0,10,0" FontWeight="Bold" Background="DodgerBlue" Foreground="White" Click="btnEditarTramite_Click_1"/>
            <Button x:Name="btnEliminarTramite" Content="Eliminar" Width="120" Height="40" Background="Red" Foreground="White" FontWeight="Bold" Click="btnEliminarTramite_Click_1"/>
            <Button x:Name="btnVolver" Content="Volver" Width="120" Height="40" Background="Orange" Foreground="White" FontWeight="Bold" Margin="10,0,10,0" Click="btnVolver_Click"/>
        </StackPanel>

        <!-- DATAGRID TRÁMITES -->
        <DataGrid x:Name="dgTramites" Grid.Row="3" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" Margin="0,0,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdTramite}" Width="80"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="Responsable" Binding="{Binding Responsable}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
