<Window x:Class="WpfApp5.PROVEEDOR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Proveedores"  
        Height="550" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">

        <Grid.Background>
            <ImageBrush ImageSource="/imagenes/fondoAzul.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <TextBlock Grid.Row="0" Text="REGISTRO DE PROVEEDORES"
                   FontSize="30" FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20" />

        <!-- FORMULARIO -->
        <Grid Grid.Row="1" Margin="0,0,0,15" HorizontalAlignment="Left" Width="450">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Nombre:" 
                   Foreground="White"
                   VerticalAlignment="Center"/>

            <TextBox Grid.Column="1" x:Name="txtNombre" 
                     Width="300" Height="30"
                     ToolTip="Ingrese el nombre del proveedor"/>

            <Label Grid.Column="1" Content="CI:" 
                   Foreground="White"
                   VerticalAlignment="Top"
                   Margin="350,9,-140,0"/>
            <TextBox Grid.Column="1" x:Name="txtCI" 
                     Width="150" Height="30" Margin="395,7,-215,3"
                     ToolTip="Ingrese el CI del proveedor"/>
        </Grid>

        <!-- BOTONES -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,15" >
            <Button x:Name="btnAgregarProveedor"
                    Content="Agregar"
                    Width="120" Height="40"
                    Margin="0,0,10,0"
                    FontWeight="Bold"
                    Background="Green"
                    Foreground="White"
                    Click="btnAgregarProveedor_Click"/>

            <Button x:Name="btnEditarProveedor"
                    Content="Modificar"
                    Width="120" Height="40"
                    Margin="0,0,10,0"
                    FontWeight="Bold"
                    Background="DodgerBlue"
                    Foreground="White"
                    Click="btnEditarProveedor_Click"/>

            <Button x:Name="btnEliminarProveedor"
                    Content="Eliminar"
                    Width="120" Height="40"
                    Background="Red"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="btnEliminarProveedor_Click"/>
        </StackPanel>

        <!-- DATAGRID PROVEEDORES -->
        <DataGrid x:Name="dgProveedores"
                  Grid.Row="3"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,0,0,0"
                  SelectionChanged="dgProveedores_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdProv}" Width="80"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding NomProv}" Width="*"/>
                <DataGridTextColumn Header="CI" Binding="{Binding CiProv}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
