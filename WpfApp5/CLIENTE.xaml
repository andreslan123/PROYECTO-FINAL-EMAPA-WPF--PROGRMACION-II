<Window x:Class="WpfApp5.Cliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cliente" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="/imagenes/fondoAzul.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Label Content="REGISTRO DE CLIENTES"
               FontSize="28" FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"
               Foreground="White"/>

        <!-- Formulario -->
        <StackPanel Grid.Row="1" Margin="10">

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Nombre:" Width="100" Foreground="White"/>
                <TextBox x:Name="txtNombre" Width="250"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="CI:" Width="100" Foreground="White"/>
                <TextBox x:Name="txtCI" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Dirección:" Width="100" Foreground="White"/>
                <TextBox x:Name="txtDireccion" Width="250"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Teléfono:" Width="100" Foreground="White"/>
                <TextBox x:Name="txtTelefono" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Correo:" Width="100" Foreground="White"/>
                <TextBox x:Name="txtCorreo" Width="250"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button x:Name="btnAgregarCliente" Content="Agregar Cliente" Width="150" Margin="5" Click="btnAgregarCliente_Click"/>
                <Button x:Name="btnEliminarCliente" Content="Eliminar Cliente" Width="150" Margin="5" Click="btnEliminarCliente_Click"/>
            </StackPanel>

        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgClientes"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  Margin="0,5" SelectionChanged="dgClientes_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                <DataGridTextColumn Header="CI" Binding="{Binding CI}" Width="120"/>
                <DataGridTextColumn Header="Dirección" Binding="{Binding Direccion}" Width="200"/>
                <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="120"/>
                <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones inferiores -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnVolver" Content="VOLVER" Width="120" Height="30" Margin="10" Click="btnVolver_Click"/>
            <Button x:Name="btnSalir" Content="SALIR" Width="120" Height="30" Margin="10" Click="btnSalir_Click"/>
        </StackPanel>

    </Grid>
</Window>

