<Window x:Class="WpfApp5.Sign_UP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="Sign_UP" Height="650" Width="500"
        Icon="/imagenes/Logotipo.png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/imagenes/fondo_emapa.jpg"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>

        </Grid.RowDefinitions>
        <StackPanel Grid.Row="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Label x:Name="lblNombre"
                   Content="Nombre/s:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="2"
                   Foreground="White">
            </Label>

            <TextBox x:Name="txtNombre"
                     Width="200"
                     Margin="8"
                     FontSize="20"
                     PreviewTextInput="txtNombre_TextChanged">

            </TextBox>

        </StackPanel>
        <StackPanel Grid.Row="3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Label x:Name="lblApePaterno"
                   Content="Ape.Paterno:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="2"
                   Foreground="White">
            </Label>

            <TextBox x:Name="txtApePaterno"
                     Width="200"
                     Margin="8"
                     FontSize="20"
                     PreviewTextInput="txtApePaterno_TextChanged" >

            </TextBox>

        </StackPanel>
        <StackPanel Grid.Row="4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Label x:Name="lblApeMaterno"
                   Content="Ape.Materno:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="2"
                   Foreground="White">
            </Label>

            <TextBox x:Name="txtApeMaterno"
                     Width="200"
                     Margin="8"
                     FontSize="20" 
                     PreviewTextInput="txtApeMaterno_TextChanged" >

            </TextBox>

        </StackPanel>
        <StackPanel Grid.Row="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Label x:Name="lblCelular"
                   Content="Celular:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="2"
                   Foreground="White">
            </Label>

            <TextBox x:Name="txtCelular"
                     Width="200"
                     Margin="8"
                     FontSize="20" 
                     MaxLength="8"
                     PreviewTextInput="txtCelular_TextChanged">

            </TextBox>

        </StackPanel>
        <StackPanel Grid.Row="6"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Label x:Name="lblCorreo"
                   Content="Correo:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="2"
                   Foreground="White">
            </Label>

            <TextBox x:Name="txtCorreo"
                     Width="200"
                     Margin="8"
                     FontSize="20"
                     PreviewTextInput="txtCorreo_TextChanged">

            </TextBox>

        </StackPanel>
        <StackPanel Grid.Row="7"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Label x:Name="lblFechaNacimiento"
                   Content="Año de Nacimiento:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="2"
                   Foreground="White">
            </Label>

            <TextBox x:Name="txtFechaNacimiento"
                     Width="200"
                     Margin="8"
                     FontSize="20" TextChanged="txtFechaNacimiento_TextChanged">

            </TextBox>

        </StackPanel>
        <StackPanel Grid.Row="8"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Label x:Name="lblConfirContraseña"
                   Content="Contraseña:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="2"
                   Foreground="White">
            </Label>
            <PasswordBox x:Name="PwContrasena"
                         Width="200"
                         Margin="8"
                         VerticalContentAlignment="Center">
                
            </PasswordBox>
          
        </StackPanel>
        <Label x:Name="lblMensajes"
                  Grid.Row="9"
                  Grid.ColumnSpan="2"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  FontSize="16"
                  FontWeight="Bold"
                  Foreground="Red"/>
        <StackPanel Grid.Row="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    >
            <Button x:Name="btnAceptar"
                Grid.Row="9"
                Background="Orange"
                Opacity="0.8"             
                Foreground="DarkBlue" Click="btnAceptar_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Grid>
                    <TextBlock Text="Aceptar"
                   HorizontalAlignment="Center"
                   Width="200"
                   FontSize="45"
                   FontWeight="Bold"
                   Margin="20,-16,-12,-5"/>
                </Grid>
            </Button>
            <Button x:Name="btnLimpiar"
                Grid.Row="9"
                Background="Red"
                Opacity="0.8"             
                Foreground="DarkBlue" Click="btnLimpiar_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Grid>
                    <TextBlock Text="Limpiar"
                   HorizontalAlignment="Center"
                    Width="200"
                   FontSize="38"
                   FontWeight="Bold"
                   Margin="20,-16,-48,-5"/>
                </Grid>
            </Button>
            
        </StackPanel>

    </Grid>
</Window>
