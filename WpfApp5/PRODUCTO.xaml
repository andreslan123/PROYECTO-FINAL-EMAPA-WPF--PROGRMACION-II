<Window x:Class="WpfApp5.PRODUCTO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="PRODUCTO" Height="600" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="/imagenes/fondoAzul.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <Label Content="PRODUCTO" FontSize="30" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- FORMULARIO -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5">
            <Label Content="Nombre:" Width="120" Foreground="White"/>
            <TextBox x:Name="txtNombreProducto" Width="200"/>
            <Label Content="Cantidad:" Width="80" Margin="10,0,0,0" Foreground="White"/>
            <TextBox x:Name="txtCantidad" Width="80"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5">
            <Label Content="Precio:" Width="120" Foreground="White"/>
            <TextBox x:Name="txtPrecio" Width="120"/>
            <Label Content="Fecha:" Width="80" Margin="10,0,0,0" Foreground="White"/>
            <DatePicker x:Name="dpFecha" Width="150" SelectedDate="{x:Static sys:DateTime.Now}"/>
        </StackPanel>

        <!-- DATAGRID -->
        <DataGrid x:Name="dgProducto" Grid.Row="3" AutoGenerateColumns="False" Margin="5" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" SelectionChanged="dgProducto_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdProd}" Width="60"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="70"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding Precio}" Width="80"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- BOTONES -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="btnAgregarProducto" Content="Agregar" Width="120" Margin="5" Click="btnAgregarProducto_Click" Background="Aquamarine"/>
            <Button x:Name="btnEditarProducto" Content="Editar" Width="120" Margin="5" Click="btnEditarProducto_Click" Background="Yellow"/>
            <Button x:Name="btnEliminarProducto" Content="Eliminar" Width="120" Margin="5" Click="btnEliminarProducto_Click" Background="Red"/>
            <Button x:Name="btnVolver" Content="Volver" Width="120" Margin="5" Click="btnVolver_Click" Background="Green"/>
            <Button x:Name="btnSalir" Content="Salir" Width="120" Margin="5" Click="btnSalir_Click" Background="Orange"/>
        </StackPanel>
    </Grid>
</Window>
